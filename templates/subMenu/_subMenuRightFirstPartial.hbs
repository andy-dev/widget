<div class="row">
	{{#each (getHtmlElements Contents)}}
		<div class="col-lg-4 col-md-4 col-xs-12">
			<a href="{{Link}}"><img src="http://mypbs.org/{{Image}}" alt="This is Product Name"></a>
			<h4>{{Header}}</h4>
			<small>{{Description}}</small>
		</div>
	{{/each}}
</div>
<div class="row">
	<div class="col-lg-12 col-md-12 col-xs-12">
		<h3>Watch Videos</h3>
		<ul class="col-lg-4 col-md-4 col-xs-12 link-list">					
			{{#listItem 0 4 RightMenuSub}}					
				<li><a href='#'>{{Text}}</a></li>
			{{/listItem}}
		</ul>
		<ul class="col-lg-4 col-md-4 col-xs-12 link-list">
			{{#listItem 4 12 RightMenuSub}}					
				<li><a href='#'>{{Text}}</a></li>
			{{/listItem}}
		</ul>
	</div>
</div>